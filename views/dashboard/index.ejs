<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <h1>Dashboard</h1>

    <table>
      <tr>
        <th>Serial No.</th>
        <th>Filename</th>
        <th>Date Added</th>
        <th>Date Modified</th>
        <th>Actions</th>
      </tr>
      <% cvs.forEach((cv, i) => { %>
      <tr>
        <td><%= cv.id %></td>
        <td><%= cv.cvFileName %></td>
        <td><%= (cv.dateAdded ? dayjs( cv.dateAdded ).format('Do MMMM, YYYY HH:mm:ss') : 'N/A') %></td>
        <td><%= (cv.dateModified ? dayjs( cv.dateModified ).format('Do MMMM, YYYY HH:mm:ss') : 'N/A') %></td>

        <td>
          <button onclick="window.location.href='/dashboard/<%= cv.id %>';">View</button>
          <button href="">Edit</button>
          <button href="">Delete</button>
          <% const link = dashboardService.getCVUrl(cv.fileName) %>
          <button href="<%= link %>" download="<%= cv.fileName %>">Download</button>
        </td>
      </tr>
      <% }) %>
    </table>
    <form action="/dashboard/add" method="get">
      <input type="submit" value="Add New CV">
  </form> 
  </body>
</html>
